@model TestObject
    @{ 
        ViewBag.Title = "Shop";
    }
    <div class="container" style="margin-top:160px">
        <div class="col-sm-6">
            @foreach (var item in Model.Items)
            {
                item.Quantity = 1;
                <div class="row">
                    <div class="col-sm-12">
                        @item.Title<br />
                        @item.ItemPrice.ItemPrice.ToString("C")
                    </div>
                    <div class="col-sm-12">
                        @Html.Partial("Partials/Items/_AddToCartButton", item)
                    </div>
                </div>
            }
        </div>
        <div class="col-sm-6">
            @foreach (var item in Model.Cats)
            {
                <div class="row">
                    <div class="col-sm-12">
                        @item.Descr<br />
                        @item.WebCategoryId
                    </div>
                </div>
            }
        </div>
    </div>
