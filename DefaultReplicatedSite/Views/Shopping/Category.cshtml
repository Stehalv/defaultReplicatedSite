@model WebCategoryViewModel
@{
    Layout = "~/Views/Shopping/_ShoppingLayout2.cshtml";
    ViewBag.HeaderImg = Model.HeaderImageUrl;
    ViewBag.ProductlineImage = Model.ProductLineImageUrl;
}
@section PageHeader{
    @Html.Partial("Partials/_PageBanner")
}
<section class="text-section">
    <h1 class="text-center">@Model.Title</h1>
    <hr />
    <div class="row">
        <div class="col-sm-12 text-center space-bottom-20 space-20">
            @Html.Raw(Model.Description)
        </div>
    </div>
    <hr />
</section>
<section class="image-and-text-section">
    <div class="row space-bottom-20">
        <div class="col-md-5">
            <img src="@Model.DescriptionImageUrl" class="img-responsive">
        </div>
        <div class="col-md-7">
            <div class="content text-center">
                <div class="row">
                    <div class="col-sm-12">
                        <h2>Is @Model.Name a match for you</h2>
                        <ul class="text-left">
                            @foreach (var match in Model.MatchList)
                            {
                                <li>
                                    -@match
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="text-section" style="padding-bottom:50px;">
    @Html.Partial("Partials/Items/Cards/_ProductCardStaticKit", Model.KitItem)
    <hr />
    <div class="row">
        @foreach (var item in Model.Items.Where(c => c.ItemType == Common.ItemTypes.SingleItem))
        {
            @Html.Partial("Partials/Items/Cards/_ProductCardSingleItem", item)
        }
    </div>
</section>

<section class="image-section">
    <div class="background-wrapper" style="background-image: url(@Model.CharacteristicsImageUrl);">
        <div class="content-wrapper">
            <div class="content text-center">
                <div class="row heading-only">
                    <div class="col-sm-12">
                        <h2 class="uppercase">Key characters of @Model.Name</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="text-section">
    <div class="row">
        <div class="col-sm-12">
            <h3>Symbolism:</h3>
            <p>@Model.SymboslismText</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>Mood:</h3>
            <p>@Model.MoodText</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>Color and Character:</h3>
            <p>@Model.ColorAndCharacterText</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>Element:</h3>
            <p>@Model.ElementText</p>
        </div>
    </div>
    <hr />
</section>
