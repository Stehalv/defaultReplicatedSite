@model CRM
    <section id="information-contact-info">
        <div class="row">
            <div class="col-sm-6">
                <h3>Contact Info</h3>
            </div>
            <div class="col-sm-6 text-right have-account">
                <span id="have-account-text">Do you have an account? <a href="#">Log in</a></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @Html.TextBoxFor(c => c, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.EmailAddress) })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @Html.PasswordFor(c => c.ContactInfo.Password, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.ContactInfo.Password) })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @Html.CheckBoxFor(c => c.OptIn) <span id="optin-text">Keep me updated on news and offers</span>
            </div>
        </div>
    </section>
    <section id="information-shipping-info">
        <div class="row">
            <div class="col-sm-12">
                <h3>Shipping Info</h3>
            </div>
        </div>
        <div class="space-10"></div>
        <div class="row">
            <div class="col-sm-6">
                @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.FirstName) })
                @Html.ValidationMessageFor(c => c.FirstName)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(c => c.LastName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.LastName) })
                @Html.ValidationMessageFor(c => c.LastName)
            </div>
        </div>
        <div class="space-10"></div>
        <div class="row">
            <div class="col-sm-12">
                @Html.TextBoxFor(c => c.Address, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.StreetAddress) })
                @Html.ValidationMessageFor(c => c.StreetAddress)
            </div>
        </div>
        <div class="space-10"></div>
        <div class="row">
            @if (Settings.Shop.AddressFields.Address2)
            {
                <div class="col-sm-12">
                    @Html.TextBoxFor(c => c.Address2, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.Address2) })
                </div>
            }
        </div>
        <div class="space-10"></div>
        <div class="row">
            @if (Settings.Shop.AddressFields.Address3)
            {
                <div class="col-sm-12">
                    @Html.TextBoxFor(c => c.Address3, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.Address3) })
                </div>
            }
        </div>
        <div class="space-10"></div>
        <div class="row">
            @if (Settings.Shop.AddressFields.State)
            {
                <div class="col-sm-4">
                    @Html.TextBoxFor(c => c.City, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.City) })
                    @Html.ValidationMessageFor(c => c.City)
                </div>
                <div class="col-sm-4">
                    @Html.TextBoxFor(c => c.State, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.State) })
                </div>
                <div class="col-sm-4">
                    @Html.TextBoxFor(c => c.Zip, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.Zip) })
                    @Html.ValidationMessageFor(c => c.Zip)
                </div>
            }
            else
            {
                <div class="col-sm-8">
                    @Html.TextBoxFor(c => c.City, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.City) })
                    @Html.ValidationMessageFor(c => c.City)
                </div>
                <div class="col-sm-4">
                    @Html.TextBoxFor(c => c.Zip, new { @class = "form-control", @placeholder = Html.DisplayNameFor(c => c.Zip) })
                    @Html.ValidationMessageFor(c => c.Zip)
                </div>
            }
        </div>
        <div class="row">
            <div class="col-sm-12">
                @Html.CheckBoxFor(c => c.SaveInformation) <span id="optin-text">Save Information For Later</span>
            </div>
        </div>
    </section>