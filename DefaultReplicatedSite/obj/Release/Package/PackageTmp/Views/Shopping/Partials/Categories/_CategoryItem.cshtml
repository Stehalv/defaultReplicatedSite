@model WebCategoryViewModel
<hr/>
<div class="row webcategory-item">
    <div class="col-sm-12 web-category-item-heading uppercase">
        <p>
            @Model.Name
        </p>
    </div>
    <div class="col-sm-6">
        <img src="@Model.ShortDescriptionImage" class="img-responsive" />
    </div>
    <div class="col-sm-6">
        <div class="col-sm-12">
            @if (Model.ProductLineId == 1)
            {
                <h5 class="uppercase">@Model.Name for skincare</h5>
            }
            else
            {
                <h5 class="uppercase">@Model.Description</h5>
            }
        </div>
        <div class="col-sm-12">
            @if (Model.ProductLineId == 1)
            {
                <p class="small-font-size">"@Html.Raw(Model.ShortDescription)"</p>
            }
            else
            {
                <p class="small-font-size">@Html.Raw(Model.ShortDescription)</p>
            }
        </div>
        <div class="col-sm-12">
            <ul>
                @foreach (var item in Model.ShortDescriptionListItems)
                {
                    <li>@item</li>
                }
            </ul>
        </div>
        <div class="col-sm-12 space-40">
            @if(Model.ProductLineId == 2)
            {
                <a class="rounded-button gold view-collection-button fullwidth uppercase" href="@Url.Action("Product", "Shopping", new { itemCode = Model.ItemCode })">View Product</a>
            }
        </div>
    </div>
    <div class="col-sm-12 text-right space-20 space-bottom-20">
        @if (Model.ProductLineId == 1)
        {
            <a class="rounded-button gold view-collection-button uppercase" href="@Url.Action("Category", "Shopping", new { category = Model.Key })">View Collection</a>
        }
    </div>
    <div class="space-20"></div>
</div>
