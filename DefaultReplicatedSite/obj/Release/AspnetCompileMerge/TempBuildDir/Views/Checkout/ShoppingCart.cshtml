@model CartModel
@{
    Layout = "~/Views/Checkout/_CheckoutLayout.cshtml";
    //Todo: Need to fix the script for update and remove itmes from tehe cart
    var hasItems = Model.HasOrder || Model.HasAutoOrder;
}
<div id="checkout-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h1>@Resources.Checkout.ShoppingCart</h1>
            </div>
        </div>
        @Html.Partial("Partials/_Cart", Model)
        <div class="row space-20">
            <div class="col-xs-2">
                <a class="btn btn-primary" onclick="javascrip:history.back()">@Resources.Checkout.BackToShopping</a>
            </div>
            @if (hasItems)
            {
                <div class="col-xs-2 pull-right text-right">
                    <a class="btn btn-primary" href="@Url.Action("Index", "Checkout", new { type = Model.Type })">@Resources.Checkout.CheckoutLabel</a>
                </div>
            }
        </div>
    </div>
</div>


