@model List<ProductLineViewModel>
@{
    Layout = "~/Views/Home/_HomeLayout.cshtml";
    ViewBag.Title = "Product Lines";
    ViewBag.HeaderImg = "https://i0.wp.com/luxxium.net/wp-content/uploads/2019/04/FACES.jpg?resize=2400%2C1800&ssl=1";
}
@section PageHeader{
    @Html.Partial("Partials/_PageBanner")
}
<style>
.article {
    padding: 0px 12% 24px 12%;
}

</style>
<section class="container article">
    <section id="page-content">
        <p class="text-center ingress">Luxxium carries a diverse collection of products to cater to every skincare  &amp; lifestyle need. From targeting problem areas, to gender specific products, Luxxium can help you achieve your best you! </p>
    </section>
    <hr class="wp-block-separator">
    <section id="product-categories">
        <div class="row text-center">
            @foreach (var productline in Model)
            {
                <div class="col-sm-6">
                    <div class="block-image">
                        <figure class="aligncenter">
                            <a href="@Url.Action("ProductLine", "Shopping", new { productline = productline.Key })">
                                <img src="@productline.ProductLineImage" class="img-responsive main-category-image" />
                            </a>
                            <figcaption>@Html.Raw(productline.Description)</figcaption>
                        </figure>
                    </div>
                </div>
            }
        </div>
    </section>
    <section id="banner">
    </section>
</section>