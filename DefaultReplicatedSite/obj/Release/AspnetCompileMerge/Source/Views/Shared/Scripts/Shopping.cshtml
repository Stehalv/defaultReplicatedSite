<script>
    function registerEventHandlers() {
        $.ajax({
            url: "@Url.Action("CountCart", "Checkout")",
            success: function (response) {
                $(".cartCount").html(response.count);
            }
        })
        $(".add-item-to-order").on("click", function () {
            $(this).closest('form').submit();
        });
        
    }
    function addToOrderBegin(e) {

    }
    function addToOrderSuccess(response) {
        console.log(response);
        $("#added-text-" + response.itemId).html(response.title + " successfully added to cart");
        $("#added-text-" + response.itemId).show(500);
        setTimeout(function () { $('#added-text-' + response.itemId).fadeOut() }, 5000);
        $(".cartCount").html(response.count);
    }
    registerEventHandlers();
</script>